{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "compiled",
    "declaration": true,
    "declarationDir": "dist",
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "tint-color",
            "padding-horizontal",
            "padding-vertical",
            "margin-horizontal",
            "margin-vertical",
            "resize-mode",
            "shadow-color"
          ]
        }
      }
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
